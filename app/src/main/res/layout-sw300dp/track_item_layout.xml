<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="11">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/track_image"
        android:layout_height="@dimen/track_image"
        android:layout_weight="1"
        android:contentDescription="@string/track_image_text"
        android:scaleType="centerCrop"
        android:src="@drawable/telegram" />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/track_title_padding"
        android:text="@string/app_name"
        android:textSize="@dimen/track_title_text_size" />

</LinearLayout>